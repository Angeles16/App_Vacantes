<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <welcome-file-list>
        <welcome-file>
            home
        </welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>VacanteController</servlet-name>
        <servlet-class>net.controller.VacanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SiteController</servlet-name>
        <servlet-class>net.controller.SiteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusquedaController</servlet-name>
        <servlet-class>net.controller.BusquedaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>net.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VacanteController</servlet-name>
        <url-pattern>/vacante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SiteController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusquedaController</servlet-name>
        <url-pattern>/busqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
